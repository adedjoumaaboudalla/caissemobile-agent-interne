<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/droitentre"
        android:text="Droit entree :  4000 FCFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/partsocial"
        android:text="Part sociale :  4000 FCFA"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/depotinitial"
        android:text="Depot init :  4000 FCFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total"
        android:text="Part sociale :  4000 FCFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Etes-vous sure d'enregistrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>