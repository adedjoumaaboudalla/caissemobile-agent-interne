<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t1"
                android:text="Agence : "
                android:textStyle="bold"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/agence"
                android:text="003344"
                android:layout_toRightOf="@+id/t1"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t2"
                android:text="Num pieces : "
                android:textStyle="bold"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:id="@+id/numpiece"
            android:text="003344"
            android:layout_toRightOf="@+id/t2"
            android:textSize="@dimen/secondarysize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t3"
                android:text="Num compte : "
                android:textStyle="bold"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:id="@+id/numcompte"
            android:text="003344"
            android:layout_toRightOf="@+id/t3"
            android:textSize="@dimen/secondarysize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t4"
                android:text="Num membre : "
                android:textStyle="bold"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/nummenbre"
            android:text="003344"
            android:layout_toRightOf="@+id/t4"
            android:textSize="@dimen/secondarysize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t5"
                android:text="Nom prenom : "
                android:textStyle="bold"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>



        <TextView
            android:id="@+id/nomprenom"
            android:text="003344"
            android:layout_toRightOf="@+id/t5"
            android:textSize="@dimen/secondarysize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t6"
                android:text="Mte : "
                android:textStyle="bold"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/montant"
                android:text="003344"
                android:layout_toRightOf="@+id/t6"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t7"
                android:text="Libelle : "
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/libelle"
                android:text="003344"
                android:layout_toRightOf="@+id/t7"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t8"
                android:text="Date : "
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:text="003344"
                android:layout_toRightOf="@+id/t8"
                android:textSize="@dimen/secondarysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/annuler"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:gravity="center"
                style="@style/SingleGradient"
                android:text="@string/fermer"
                />

            <Button
                android:id="@+id/valider"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:gravity="center"
                style="@style/SingleGradient"
                android:text="@string/valid"
                />
        </LinearLayout>


        <Button
            android:id="@+id/imp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            style="@style/SingleGradient"
            android:text="@string/imprimer"
            />


    </LinearLayout>
</ScrollView>