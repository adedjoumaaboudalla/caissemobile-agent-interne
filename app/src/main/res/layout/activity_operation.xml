<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drLayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:theme="@style/AppBaseTheme"
    android:fitsSystemWindows="true"
    android:background="@color/my_secondary_text"
    tools:context="caissemobile.com.mediasoft.projet.microfinacaissemobile.activities.OperationActivity">

<RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_below="@+id/appBarLayout"
            android:layout_above="@+id/last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:id="@+id/last"
            android:orientation="vertical"
            android:background="#ddd"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ttotal"
                            android:textColor="@color/my_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/depot"/>

                        <TextView
                            android:id="@+id/depot"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/ttotal"
                            android:textColor="@color/my_icons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4500000000"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ttotal1"
                            android:textColor="@color/my_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retrait"/>

                        <TextView
                            android:id="@+id/retrait"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/ttotal1"
                            android:textColor="@color/my_icons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4500000000"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ttotal3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nbr"/>

                        <TextView
                            android:id="@+id/nbre"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/ttotal3"
                            android:textColor="@color/my_icons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4500000000"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode = "parallax"
                android:minHeight="?attr/actionBarSize"
                app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme = "@style/ThemeOverlay.AppCompat.Light"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/st1"
                        android:text="@string/soldeini"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/my_secondary_text"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/si1"
                        android:text="70000"
                        android:layout_toRightOf="@id/st1"
                        android:textColor="@color/my_secondary_text"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/st2"
                        android:text="@string/soldefin"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/my_secondary_text"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/si2"
                        android:text="70000"
                        android:layout_toRightOf="@id/st2"
                        android:textColor="@color/my_secondary_text"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:scrollbars="horizontal"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="center"
                app:tabMode="scrollable"
                app:tabIndicatorColor="@color/my_secondary_text"
                app:tabIndicatorHeight="0dp"
                app:tabTextColor="@color/my_secondary_text"
                app:tabBackground="@drawable/tab_color_selector"
                app:theme = "@style/ThemeOverlay.AppCompat.Light"
                app:tabSelectedTextColor="@color/my_primary"
                app:tabMinWidth="180dp" />

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>


