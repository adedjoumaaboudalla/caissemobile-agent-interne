<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drLayout"
    tools:context="caissemobile.com.mediasoft.projet.microfinacaissemobile.activities.MembreActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme = "@style/ThemeOverlay.AppCompat.Light"/>

    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Mte total : "
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="18sp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/total"
                android:text="80000"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:gravity="right"
                android:textSize="18sp"
                android:textColor="@color/my_icons"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Nbre membre : "
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="18sp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/nbre"
                android:text="80000"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:gravity="right"
                android:textSize="18sp"
                android:textColor="@color/my_icons"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/annuler"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:gravity="center"
                style="@style/SingleGradient"
                android:text="@string/effacer"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                />

            <Button
                android:id="@+id/valider"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:gravity="center"
                style="@style/SingleGradient"
                android:text="@string/valid"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
